{
  "compilerOptions": {
    "target": "es5",  
    "module": "system",    
    "lib": ["es6", "dom"],                
    "moduleResolution": "node",
    "jsx": "react",               
    "sourceMap": false,                   
    "removeComments": false,                
    "importHelpers": true,                 
    "strict": true,                         
    "baseUrl": "src/",                      
    "paths": {
      "@common/*": [ "../../common/*" ],
      "@editor/*": [ "src/*"]
    },                          
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true                
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts*",
    "../common/**/*.ts*"
  ]
}